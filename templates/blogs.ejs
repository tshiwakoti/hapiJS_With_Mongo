<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% for(var i=0; i < blogs.length; i++) { %>
        <div class="post-preview">
          <a href='blogs/<%=blogs[i]._id%>' >
            <h2 class="post-title"><%= blogs[i].title %></h2>
            <p><h3 class="post-subtitle"><%= blogs[i].blog.slice(0,100) %></h3></p>
          </a>
          <p class="post-meta">Posted by <a href="#"> <%= blogs[i].author.email %> </a> <%=blogs[i].createdDate%> </p>
          <hr>
        </div>
      <% } %>
    </div>
  </div>
</div>